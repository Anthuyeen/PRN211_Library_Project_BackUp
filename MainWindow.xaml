<Window x:Class="_06_LibraryManagement_PRN221_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06_LibraryManagement_PRN221_Project"
        mc:Ignorable="d"
        Title="Login" Height="284" Width="514" WindowStartupLocation="CenterScreen">
    <Grid Height="265" VerticalAlignment="Top">
        <StackPanel Margin="134,66,134,71">
            <Label Content="Username"/>
            <TextBox x:Name="tbAccount"/>
            <Label Content="Password"/>
            <PasswordBox x:Name="tbPassword" Margin="0 0 0 20"/>
            <Button  Content="Login" Width="100" Click="Button_Click"/>
        </StackPanel>
        <Label HorizontalAlignment="Left" Margin="10,221,0,0" VerticalAlignment="Top" Width="84" FontSize="10" x:Name="lbDay"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="432,226,0,0" VerticalAlignment="Top" Click="btn_Exit_Click" x:Name="btn_Exit" Width="58" Background="Transparent" FontWeight="Bold" BorderThickness="0.5"/>
    </Grid>
</Window>
